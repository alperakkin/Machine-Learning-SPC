
<Left_Menu>:

    pos:self.pos
    size_hint:self.size_hint

    ImageButton:
        id:left_menu
        pos:self.pos
        size_hint:self.size_hint
        allow_stretch:True
        keep_ratio:False
        source:"picture_lib/menu.png"



    ImageButton:
        id:menu_button
        pos:self.pos
        size_hint:self.size_hint
        allow_stretch:True
        keep_ratio:False
        source:"picture_lib/menu_button.png"
        canvas.before:
            PushMatrix
            Rotate:
                angle: self.angle
                origin: self.center
        canvas.after:
            PopMatrix





<MainMenu>:

    Left_Menu:
        id:menu
        pos:self.pos
        size_hint:self.size_hint
        allow_stretch:self.allow_stretch
        keep_ratio:self.keep_ratio
        status:self.status


    ImageButton:
        id:exit_button
        pos:self.pos
        size_hint:self.size_hint
        allow_stretch:True
        keep_ratio:False
        source: "picture_lib/exit.png"

        canvas.before:
            PushMatrix
            Rotate:
                angle: self.angle
                origin: self.center
        canvas.after:
            PopMatrix





<OpenDialog>:
    title:self.title
    size_hint:0.4,0.35
    auto_dismiss:False
    text:input.text
    text2:input2.text
    lb_error:er


    BoxLayout:
        orientation: 'vertical'
        padding:10
        pos: self.pos
        size:root.size

        BoxLayout:

            orientation:'horizontal'
            padding:0,-20,0,5

            Label:
                id:t1
                size_hint_y:0.6
            TextInput:
                id:input
                multiline: False
                write_tab:False
                size_hint_y:0.6
                padding_y:6,1
                on_text: root.error=''
        BoxLayout:
            orientation:'horizontal'
            padding:0,-20,0,5


            Label:
                id:t2
                size_hint_y:0.6
            TextInput:

                id:input2
                multiline: False
                write_tab:False
                password:True
                size_hint_y:0.6
                padding_y:8,1
                on_text: root.error=''

        BoxLayout:
            orientation: 'horizontal'
            padding:0,5,0,-30
            Button:
                text:'Giris'
                on_press:root.enter()
            Button:
                text: 'Iptal'
                on_press: root.cancel()

        FloatLayout:
            Label:
                id:er
                foreground_color:1,250,100,1
                color: 1,0.67,0,1
                size_hint_y:None
                pos:410,370
                height:0
                text:root.error




<Configuration_Window>:


    ImageButton:
        id:exit_button
        pos:self.pos
        size_hint:self.size_hint
        allow_stretch:True
        keep_ratio:False
        source: "picture_lib/exit.png"
        on_release:root.close_app()
        canvas.before:
            PushMatrix
            Rotate:
                angle: self.angle
                origin: self.center
        canvas.after:
            PopMatrix


    Frame:
        id: Frame1
        pos:self.pos
        size_hint:self.size_hint
        allow_stretch:True
        keep_ratio:True

    Frame:
        id: Frame2
        pos:self.pos
        size_hint:self.size_hint
        allow_stretch:True
        keep_ratio:True

    Frame:
        id: Frame3
        pos:self.pos
        size_hint:self.size_hint
        allow_stretch:True
        keep_ratio:True

    Frame:
        id: Frame4
        pos:self.pos
        size_hint:self.size_hint
        allow_stretch:True
        keep_ratio:True

    ConfigPanel:
        id: config_panel
        pos:self.pos
        size_hint:self.size_hint
        allow_stretch: True
        keep_ratio: False












